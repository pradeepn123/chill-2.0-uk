{% liquid 
    assign animation_delay = 150
%}
<div class="icon-with-text-sec">
    <div class="container">
        <div class="icon-with-text-wrapper">
            <span class="home_icons_title">{{ section.settings.home_icons_title }}</span>
            <div class="icon-list">
                {%- for block in section.blocks -%}
                    {% case block.type %}
                        {% when 'icon-text' %}
                        {% if block.settings.url != blank %}<a href="{{ block.settings.url }}">{% endif %}
                            <div class="icon-item">
                            {% comment %}
                            <div class="icon-item" data-aos="fade"
                            data-aos-delay="{{ animation_delay }}"
                            {%- assign animation_delay = animation_delay | plus: 150 -%}>
                            {% endcomment %}
                                {% if block.settings.icon_svg != blank %}
                                    {{ block.settings.icon_svg }}
                                {% elsif block.settings.icon_image != blank %}
                                        <img src="{{ block.settings.icon_image | img_url: '1920x' }}" alt=""/>
                                {% endif %}
                                <h3 class="icon_title">{{ block.settings.title }} 
                                        <svg class="icon_arrow" style="opacity: 0" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                            <g clip-path="url(#clip0_246_1152)">
                                                <path d="M7.65771 4.58398L13.4276 10.3538L7.65771 16.1237" stroke="black" stroke-width="2" stroke-linecap="square" fill="none"/>
                                            </g>
                                            <defs>
                                                <clipPath id="clip0_246_1152">
                                                    <rect width="20" height="20" fill="white"/>
                                                </clipPath>
                                            </defs>
                                        </svg>
                                    </h3>
                                <p>{{ block.settings.subheading }}</p>
                            </div>
                        {% if block.settings.url != blank %}</a>{% endif %}
                    {% endcase %}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Home Icons",
        "class": "section-home-icons",
        "settings": [
            {
                "type": "richtext",
                "id": "home_icons_title",
                "label": "Title"
            }
        ],
        "blocks": [
            {
                "type": "icon-text",
                "name": "Text and icon media",
                "settings": [
                    {
                        "id": "icon_image",
                        "type": "image_picker",
                        "label": "Choose image"
                    },
                    {
                        "id": "icon_svg",
                        "type": "html",
                        "label": "Choose svg icon"
                    },
                    {
                        "id": "url",
                        "type": "url",
                        "label": "Choose the link"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Heading",
                        "default": "Icon title"
                    },
                    {
                        "type": "text",
                        "id": "subheading",
                        "label": "Subheading"
                    }, 
                    {
                        "type": "checkbox",
                        "id": "use_alt_bg",
                        "label": "Use alternate section color",
                        "default": false
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Home Icons",
                "settings": {}
            }
        ]
    }
{% endschema %}