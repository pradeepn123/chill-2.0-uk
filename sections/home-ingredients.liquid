{% style %}    
    {%- for block in section.blocks -%}
        {% case block.type %}                        
            {% when 'tabs-content' %}
            .explore-product-link .btn-explore-product{
                background: {{ block.settings.button_bg_color }};
                border: 1px solid {{ block.settings.button_bg_color }};
                color: {{ block.settings.button_text_color}};
            }
        {% endcase %}
    {%- endfor -%}
{% endstyle %}
<div class="home-ingredients-section fully-spaced-row--medium">
    <div class="container">
        <div class="ingredients-section-wrapper">
            <div class="heading_text align-{{ section.settings.text_alignment }}">
                <h3>
                    {{ section.settings.heading_text }}
                </h3>
                {{ section.settings.subheading_text}}
            </div>
            
            <div class="tab-content">
                <div class="tab-heading">
                    <ul class='tabs'>
                        {%- for block in section.blocks -%}
                            {% case block.type %}
                                {% when 'tabs-heading' %}
                                <li class='{% if forloop.first %}active{% endif %}' data-tab-id='tab{{ forloop.index }}'>{{ block.settings.title}}</li>
                            {% endcase %}
                        {% endfor%}
                    </ul>
                </div>              
                <div class='content-section'>
                    {%- for block in section.blocks -%}
                        {% case block.type %}
                            {% when 'tabs-content' %}
                            {% assign tab_id = tab_id | plus:1 %}
                            <div id='tab{{tab_id}}' class='content {% if tab_id == 1 %}active{% endif %}'>
                                <div class="tab-content-list">
                                    <div class="tab-content-item">
                                        {% if block.settings.image_one != blank %}
                                            <img src="{{ block.settings.image_one | img_url: '1920x'}}" alt="" />
                                        {% endif %}
                                        <h3>{{ block.settings.heading_one }}</h3>
                                        {{ block.settings.text_one}}
                                    </div>
                                    <div class="tab-content-item">
                                        {% if block.settings.image_two != blank %}
                                            <img src="{{ block.settings.image_two | img_url: '1920x'}}" alt="" />
                                        {% endif %}
                                        <h3>{{ block.settings.heading_two }}</h3>
                                        {{ block.settings.text_two}}
                                    </div>
                                    <div class="tab-content-item">
                                        {% if block.settings.image_three != blank %}
                                            <img src="{{ block.settings.image_three | img_url: '1920x'}}" alt="" />
                                        {% endif %}
                                        <h3>{{ block.settings.heading_three }}</h3>
                                        {{ block.settings.text_three}}
                                    </div>
                                </div>
                                <a class="explore-product-link" href="{{ block.settings.button_link }}">
                                    <button class="btn btn-explore-product">{{ block.settings.button_label }}</button>
                                </a>
                            </div>                            
                        {% endcase %}
                    {% endfor%}           
                </div>
            </div>                        
        </div>
    </div>
</div>

