
<div class="banner_wrapper" data-section-type="affiliate-banner">
    {% if section.settings.banner-image_mobile != blank %}
      {% style %}
        @media (max-width: 640px){
          .banner_wrapper{
            background: url('{{ section.settings.banner-image_mobile | img_url: 'master' }}'); 
            background-size: cover; 
            background-repeat: no-repeat; 
            background-position: center right;
          }
        }
        @media (min-width: 641px){
          .banner_wrapper{
            background: url('{{ section.settings.banner-image | img_url: 'master' }}'); 
            background-size: cover; 
            background-repeat: no-repeat; 
            background-position: center right;
          }
        }
      {% endstyle %}
    {% endif %}
    
    <div class="banner_text">
        <h1 class="desktop" style="font-size: {{ section.settings.title_font_size }}px; color: {{ section.settings.title_color }} !important; ">{{ section.settings.title }}</h1>
        <h1 class="mobile" style="font-size: {{ section.settings.title_font_size_mobile }}px; color: {{ section.settings.title_color_mobile }} !important;">{{ section.settings.mobile_title }}</h1>
        {% if section.settings.sub_title != blank %}
          <h3 class="desktop" style="font-size: {{ section.settings.sub_title_font_size }}px; color: {{ section.settings.subtitle_color }};">{{ section.settings.sub_title }}</h3>
          <h3 class="mobile" style="font-size: {{ section.settings.sub_title_font_size_mobile }}px; color: {{ section.settings.subtitle_color_mobile }};">{{ section.settings.sub_title_mobile }}</h3>
        {% endif %}
        {% if section.settings.join_now_btn %}
          <a href="{{ section.settings.banner_btn_url }}" target="_blank" style="color: {{ section.settings.banner_btn_text_color }}"><button class="banner_btn">{{ section.settings.banner_btn_content }}</button></a>
        {% endif %}
        
        {% style %}
        @media (max-width: 1023px){
          .banner_btn{
            background: {{ section.settings.banner_btn_color_mobile }};
            font-size: {{ section.settings.banner_btn_font_size_mobile }}px;
          }
        }
        @media (min-width: 1024px){
          .banner_btn{
            background: {{ section.settings.banner_btn_color}};
            font-size: {{ section.settings.banner_btn_font_size }}px;
          }
        }
        {% endstyle %}
    </div>
</div> 


{% schema %}
  {
    "name": "Affiliate Banner",
    "class": "section-affiliate-banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner-image",
        "label": "Custom Background Image"
