        "default": "#000"
      },
      {
        "type": "range",
        "id": "sub_title_font_size_mobile",
        "label": "Subtitle font size in Mobile",
        "min": 0,
        "max": 72,
        "step": 2,
        "unit": "px",
        "default": 16
      },
      {
