                    {% endif %}
                  </li>
                {% endfor %}
              {% endif%}
            {% endfor %}
            
          {% endif %}
          
          {%- if small_promo_count > 0 -%}
              {%- if mobile == false -%}
                {%- for block in section.blocks -%}
                  {%- assign dropdown_link_title_sanitised = block.settings.dropdown_link_title | downcase | strip -%}
