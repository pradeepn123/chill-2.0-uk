                        {%- if block.settings.link_url != blank -%}
                          <a class="menu-promotion__link" href="{{ block.settings.link_url }}">
                        {%- endif -%}
                          <div class="menu-promotion__image">
                            {%- render 'responsive-image', image: block.settings.image, manual_image_load: true -%}
